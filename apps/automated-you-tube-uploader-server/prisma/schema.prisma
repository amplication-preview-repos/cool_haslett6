datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  createdAt     DateTime         @default(now())
  description   String?
  filePath      Json?
  id            String           @id @default(cuid())
  scheduledTime DateTime?
  schedules     Schedule[]
  status        EnumVideoStatus?
  title         String?
  updatedAt     DateTime         @updatedAt
  user          User?            @relation(fields: [userId], references: [id])
  userId        String?
}

model Schedule {
  createdAt     DateTime            @default(now())
  id            String              @id @default(cuid())
  scheduledTime DateTime?
  status        EnumScheduleStatus?
  updatedAt     DateTime            @updatedAt
  video         Video?              @relation(fields: [videoId], references: [id])
  videoId       String?
}

model Notification {
  createdAt DateTime                @default(now())
  id        String                  @id @default(cuid())
  message   String?
  recipient String?
  status    EnumNotificationStatus?
  updatedAt DateTime                @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
  videos    Video[]
}

enum EnumVideoStatus {
  Option1
}

enum EnumScheduleStatus {
  Option1
}

enum EnumNotificationStatus {
  Option1
}
